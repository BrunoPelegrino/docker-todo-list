version: '3'
services:
  todofrontend:
    build: frontend/
    restart: always
    ports:
      - 3000:3000
    depends_on:
      - todobackend
    environment:
      - REACT_APP_API_HOST=todobackend

  todobackend:
    build: backend/
    restart: always
    ports:
      - 3001:3001

  todotests:
    depends_on:
      - todofrontend
      - todobackend
    restart: always
    environment:
      - FRONT_HOST=todofrontend


